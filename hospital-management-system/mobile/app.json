{
  "expo": {
    "name": "Spetaar Patient Portal",
    "slug": "hms-patient-portal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "hms-patient",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"
    },
    "updates": {
      "enabled": false,
      "url": "https://u.expo.dev/bcfea148-f3e9-4410-834b-bcc5b271bb45"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hms.patientportal",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan documents and capture photos for medical records.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photos to upload medical documents.",
        "NSFaceIDUsageDescription": "This app uses Face ID to securely authenticate and protect your health data.",
        "NSCalendarsUsageDescription": "This app adds appointments to your calendar for reminders.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to find nearby hospitals and provide directions.",
        "UIBackgroundModes": [
          "remote-notification",
          "remote-notification"
        ]
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "privacyManifests": {
        "NSPrivacyAccessedAPITypes": [
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryUserDefaults",
            "NSPrivacyAccessedAPITypeReasons": [
              "CA92.1"
            ]
          },
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryUserDefaults",
            "NSPrivacyAccessedAPITypeReasons": [
              "CA92.1"
            ]
          }
        ]
      }
    },
    "android": {
      "package": "com.hms.patientportal",
      "versionCode": 1,
      "minSdkVersion": 26,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      },
      "edgeToEdgeEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.health.READ_STEPS",
        "android.permission.health.READ_HEART_RATE",
        "android.permission.health.READ_RESTING_HEART_RATE",
        "android.permission.health.READ_HEART_RATE_VARIABILITY",
        "android.permission.health.READ_OXYGEN_SATURATION",
        "android.permission.health.READ_BLOOD_PRESSURE",
        "android.permission.health.READ_BLOOD_GLUCOSE",
        "android.permission.health.READ_WEIGHT",
        "android.permission.health.READ_BODY_TEMPERATURE",
        "android.permission.health.READ_ACTIVE_CALORIES_BURNED",
        "android.permission.health.READ_DISTANCE",
        "android.permission.health.READ_RESPIRATORY_RATE",
        "android.permission.health.READ_SLEEP",
        "android.permission.health.READ_EXERCISE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "./modules/health-platform/app.plugin.js",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 26
          }
        }
      ],
      "expo-font",
      "expo-secure-store",
      "expo-local-authentication",
      "expo-document-picker",
      "expo-file-system",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#3B82F6"
        }
      ],
      [
        "expo-calendar",
        {
          "calendarPermission": "This app needs access to your calendar to add appointment reminders."
        }
      ]
    ],
    "extra": {
      "APP_ENV": "production",
      "API_URL": "https://spetaar.ai/api/v1",
      "SENTRY_DSN": "",
      "eas": {
        "projectId": "bcfea148-f3e9-4410-834b-bcc5b271bb45"
      }
    },
    "owner": "kamiltaqon",
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
