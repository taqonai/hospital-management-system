# Application
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5433/hospital_db?schema=public"

# JWT - Change these in production!
JWT_SECRET=dev-jwt-secret-change-in-production-min-32-chars
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-min-32
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 (for medical images) - Optional for development
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=hospital-medical-images

# MinIO (S3-compatible storage for local development)
# Use this for local development instead of AWS S3
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=hospital-medical-images

# Email (SMTP) - Optional for development
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@hospital.com

# AWS SES Configuration (for transactional emails)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=
AWS_SES_SECRET_ACCESS_KEY=
AWS_SES_FROM_EMAIL=noreply@spetaar.ai

# AWS SNS Configuration (for SMS)
AWS_SNS_REGION=us-east-1
AWS_SNS_SENDER_ID=HMS

# Twilio Configuration (for WhatsApp only - AWS doesn't support WhatsApp)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# WhatsApp Bot - Default Hospital (for hospital-specific WhatsApp numbers)
# If not set, uses first active hospital from database
DEFAULT_HOSPITAL_ID=

# Notification Settings
NOTIFICATIONS_EMAIL_ENABLED=true
NOTIFICATIONS_SMS_ENABLED=true
NOTIFICATIONS_WHATSAPP_ENABLED=true

# AI Services
AI_SERVICE_URL=http://localhost:8000
AI_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Encryption - Change in production!
ENCRYPTION_KEY=dev-encryption-key-32-characters

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_test_51234567890abcdef
STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdef
STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdef
ENABLE_ONLINE_PAYMENTS=false

# DHA eClaimLink Integration (production only)
ECLAIM_LINK_API_URL=
ECLAIM_LINK_USERNAME=
ECLAIM_LINK_PASSWORD=
ECLAIM_LINK_FACILITY_ID=
ECLAIM_LINK_ENABLED=false
