{
  "name": "hms-backend",
  "version": "1.0.0",
  "description": "Hospital Management System Backend API",
  "main": "dist/app.js",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "build:strict": "tsc --strict",
    "start": "node dist/app.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "ts-node prisma/seed.ts",
    "db:seed:wellness": "ts-node prisma/seed-wellness.ts",
    "db:seed:icd10": "ts-node prisma/seed-icd10.ts",
    "db:seed:cpt": "ts-node prisma/seed-cpt.ts",
    "db:seed:insurance-coding": "npm run db:seed:icd10 && npm run db:seed:cpt",
    "db:seed:amad": "ts-node prisma/seed-amad.ts",
    "db:seed:dashboard": "ts-node prisma/seed-dashboard.ts",
    "db:seed:uae-drugs": "ts-node prisma/seed-uae-drugs.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.962.0",
    "@aws-sdk/client-ses": "^3.964.0",
    "@aws-sdk/client-sns": "^3.964.0",
    "@aws-sdk/lib-storage": "^3.962.0",
    "@prisma/client": "^5.7.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.7",
    "twilio": "^5.11.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
